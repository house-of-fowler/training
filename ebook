    <script>
        // Simple password protection script
        document.addEventListener('DOMContentLoaded', function() {
            const loginButton = document.getElementById('login-button');
            const accessCode = document.getElementById('access-code');
            const errorMessage = document.getElementById('error-message');
            const loginSection = document.getElementById('login-section');
            const contentContainer = document.getElementById('content-container');
            
            // Set the access code (in a real implementation, this would be verified server-side)
            const correctAccessCode = "access123";
            
            loginButton.addEventListener('click', function() {
                if(accessCode.value === correctAccessCode) {
                    // Show content, hide login
                    loginSection.style.display = 'none';
                    contentContainer.style.display = 'block';
                    // Scroll to top
                    window.scrollTo(0, 0);
                } else {
                    // Show error
                    errorMessage.style.display = 'block';
                    accessCode.focus();
                }
            });
            
            // Allow pressing Enter to submit
            accessCode.addEventListener('keypress', function(e) {
                if(e.key === 'Enter') {
                    loginButton.click();
                }
            });
        });
    </script>
